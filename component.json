{
    "title": "TestGrount Component",
    "description": "A play ground component to practice design pattern",
    "docsUrl": "",
    "buildType": "docker",
    "envVars": {
        "API_KEY": {
            "required": true,
            "description": "Kindly enter the API Key for the MongoDB Data APIs to be functional"
        }
    },
    "credentials": {
        "fields": {
            "username": {
                "label": "Username",
                "viewClass": "TextFieldView",
                "required": true,
                "prompt": "Kindly enter Username"
            },
            "password": {
                "label": "Password",
                "viewClass": "PasswordFieldView",
                "required": true,
                "prompt": "Kindly enter Password"
            },
            "apiKey": {
                "label": "API KEY",
                "viewClass": "TextFieldView",
                "required": true,
                "prompt": "Kindly enter API KEY"
            }
        }
    },
    "actions": {
        "getUsers": {
            "main": "./lib/actions/getUsers.js",
            "title": "Get Users",
            "metadata": {
                "in": "./lib/schemas/getUsers.in.json"
            }
        },
        "getTodos": {
            "main": "./lib/actions/getTodo.js",
            "title": "Get Todos"
        },
        "findOneDocument": {
            "main": "./lib/actions/singleDocument.js",
            "title": "Find a Single Document from Sync using Data API",
            "description": "Find a Single Document from Sync using Data API",
            "metadata": {
                "in": "./lib/schemas/singleDocument.in.json"
            }
        }
    }
}